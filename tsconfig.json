{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"moduleResolution": "node",
		"isolatedModules": true,
		// Tells TypeScript to read JS files, as
		// normally they are ignored as source files
		"allowJs": true,
		// Generate d.ts files
		"declaration": false,
		"resolveJsonModule": true,
		"outDir": "types"
	},
	"extends": "@tsconfig/strictest/tsconfig.json",
	"include": [
		"packages/**/*.ts"
	]
}